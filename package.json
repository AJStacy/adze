{
  "name": "adze",
  "description": "A modern, isomorphic, and extendable logging library for JavaScript and TypeScript.",
  "version": "2.0.0",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.prod.json && tsc-alias",
    "clean": "rm -rf ./dist",
    "predemo:browser": "npm run build",
    "demo:browser": "http-server -o -p 8082",
    "demo:node": "ts-node ./demo.ts",
    "lint": "prettier ./src --check && eslint .",
    "lint:fix": "prettier ./src --write && eslint . --fix",
    "test": "vitest",
    "prepare": "husky",
    "size": "size-limit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AJStacy/adze.git"
  },
  "keywords": [
    "typescript",
    "logger",
    "javascript",
    "isomorphic",
    "node",
    "browser"
  ],
  "author": "Andrew Stacy <ajstacy@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/AJStacy/adze/issues"
  },
  "homepage": "https://github.com/AJStacy/adze#readme",
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "prettier": "3.3.2",
    "size-limit": "^11.1.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "mergician": "^2.0.2"
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ]
}
