{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "lib": ["DOM", "ES2015"],
    "types": ["node"],
    "declaration": true,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/demo_funcs.ts",
    "vitest.config.ts",
    "eslint.config.js",
    "./test/**/*"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
